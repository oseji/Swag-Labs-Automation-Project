{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node"
	},
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	},
	"include": ["tests/**/*", "utils/loadLandingPageAndLogin.ts"],
	"exclude": ["node_modules"]
}
